<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_add_channel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/tv_add_channel"
        app:layout_constraintStart_toEndOf="@id/iv_add_channel"
        app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toStartOf="@id/btn_add_channel"
        android:layout_width="0dp"
        android:text="Jalgas"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvDescription_add_channel"
        app:layout_constraintStart_toEndOf="@id/iv_add_channel"
        app:layout_constraintTop_toBottomOf="@id/tv_add_channel"
        app:layout_constraintEnd_toStartOf="@id/btn_add_channel"
        android:layout_width="0dp"
        android:text="Ruslan"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_add_channel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:background="@drawable/ic_baseline_delete_24"
        android:layout_marginEnd="32dp"
        android:layout_height="48dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>